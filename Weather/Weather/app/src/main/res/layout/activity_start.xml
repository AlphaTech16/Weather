<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:background="@drawable/sunny_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.avash.weather.activity.StartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#54232323"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="City"
            android:gravity="right"
            android:textSize="30sp"
            android:textColor="#fff"
            android:layout_weight="1"/>
        <Spinner
            android:theme="@style/Base.ThemeOverlay.AppCompat.Light"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:id="@+id/citySpinner"
            android:gravity="center"
            style="@style/Base.ThemeOverlay.AppCompat.Light" >
        </Spinner>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:background="#54232323"
        android:fitsSystemWindows="true"
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <!-- Weather Information -->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:id="@+id/relativeLayout"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/avgLayout"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    android:gravity="bottom">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="100sp"
                        android:fontFamily="casual"
                        android:id="@+id/avgTextView"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/maxLayout"
                    android:layout_above="@id/avgLayout"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="0dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingEnd="10dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="0dp"
                        android:paddingRight="10dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <ImageView
                                android:layout_marginEnd="4dp"
                                android:layout_width="15dp"
                                android:layout_height="25dp"
                                android:id="@+id/maxImageView"
                                android:layout_marginRight="4dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="30sp"
                                android:text=""
                                android:id="@+id/maxTextView"
                                android:fontFamily="casual"
                                android:textColor="#fff"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/minLayout"

                        android:orientation="vertical"
                        android:paddingStart="0dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingEnd="10dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="0dp"
                        android:paddingRight="10dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/minImageView"
                                android:layout_marginEnd="4dp"
                                android:layout_width="15dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="4dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="30sp"
                                android:text=""
                                android:id="@+id/minTextView"
                                android:fontFamily="casual"
                                android:textColor="#fff"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/textLayout"
                    android:layout_above="@id/maxLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <ImageView
                            android:layout_marginEnd="4dp"
                            android:layout_width="20dp"
                            android:layout_height="26dp"
                            android:id="@+id/textImageView"
                            android:layout_marginRight="4dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:text=""
                            android:id="@+id/textTextView"
                            android:textColor="#fff"/>
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>





            <!-- Forecast-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:background="#7b32366e"
                android:id="@+id/forecastLayout">

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Forecast"
                    android:textColor="#fff"
                    android:textSize="28dp"
                    android:textStyle="italic" />
                <View
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#fff" />

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:id="@+id/dayOneTextView"
                        android:textColor="#fff"
                        android:textSize="24sp"
                        android:layout_margin="5dp"
                        android:padding="2dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_width="30dp"
                        android:layout_margin="2dp"
                        android:id="@+id/dayOneImageView"
                        android:layout_marginRight="2dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:id="@+id/dayOneHighTempTextView"
                        android:textColor="#fff"
                        android:layout_marginRight="2dp"
                        android:textSize="24sp"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:id="@+id/dayOneLowTempTextView"
                        android:textSize="24sp"
                        android:layout_margin="2dp"
                        android:textColor="#fff"
                        android:padding="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:textColor="#fff"
                        android:id="@+id/dayTwoTextView"
                        android:textSize="24sp"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_width="30dp"
                        android:layout_margin="2dp"
                        android:id="@+id/dayTwoImageView"
                        android:layout_marginRight="2dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:id="@+id/dayTwoHighTempTextView"
                        android:layout_marginRight="2dp"
                        android:textColor="#fff"
                        android:textSize="24sp"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:id="@+id/dayTwoLowTempTextView"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:id="@+id/dayThreeTextView"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_width="30dp"
                        android:layout_margin="2dp"
                        android:id="@+id/dayThreeImageView"
                        android:layout_marginRight="2dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:id="@+id/dayThreeHighTempTextView"
                        android:layout_marginRight="2dp"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:id="@+id/dayThreeLowTempTextView"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:id="@+id/dayFourTextView"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_width="30dp"
                        android:layout_margin="2dp"
                        android:id="@+id/dayFourImageView"
                        android:layout_marginRight="2dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:id="@+id/dayFourHighTempTextView"
                        android:layout_marginRight="2dp"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:id="@+id/dayFourLowTempTextView"
                        android:textSize="24sp"
                        android:layout_margin="2dp"
                        android:textColor="#fff"
                        android:padding="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:id="@+id/dayFiveTextView"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_width="30dp"
                        android:layout_margin="2dp"
                        android:id="@+id/dayFiveImageView"
                        android:layout_marginRight="2dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:id="@+id/dayFiveHighTempTextView"
                        android:textColor="#fff"
                        android:layout_marginRight="2dp"
                        android:textSize="24sp"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:id="@+id/dayFiveLowTempTextView"
                        android:textSize="24sp"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textColor="#fff"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:id="@+id/daySixTextView"
                        android:textColor="#fff"
                        android:textSize="24sp"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_width="30dp"
                        android:layout_margin="2dp"
                        android:id="@+id/daySixImageView"
                        android:layout_marginRight="2dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:id="@+id/daySixHighTempTextView"
                        android:textColor="#fff"
                        android:layout_marginRight="2dp"
                        android:textSize="24sp"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:id="@+id/daySixLowTempTextView"
                        android:textSize="24sp"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textColor="#fff"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:id="@+id/daySevenTextView"
                        android:textColor="#fff"
                        android:textSize="24sp"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_width="30dp"
                        android:layout_margin="2dp"
                        android:id="@+id/daySevenImageView"
                        android:layout_marginRight="2dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:id="@+id/daySevenHighTempTextView"
                        android:textColor="#fff"
                        android:layout_marginRight="2dp"
                        android:textSize="24sp"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:id="@+id/daySevenLowTempTextView"
                        android:textSize="24sp"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:textColor="#fff"
                        android:layout_marginRight="2dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>





            <!-- Wind Details-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:background="#62ffffff"
                android:id="@+id/windLayout">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="130dp"
                            android:src="@drawable/wind"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="26sp"
                            android:textColor="#000"
                            android:id="@+id/windTextView"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>



        </TableLayout>

    </ScrollView>


</LinearLayout>
